{
	"manifest_version" : 2,
	"name" : "Get vtt url",
	"description" : "Thuban",
	"version" : "1.0.0",
    "permissions": [
        "tabs",
        "storage",
        "webRequest",
        "clipboardWrite",
        "http://*/*",
        "https://*/*"
    ],
    "icons" : {
        "16" : "icons/m3uSniffer-on-64px.png",
        "48" : "icons/m3uSniffer-on-64px.png",
        "128" : "icons/m3uSniffer-on-128px.png"
    },
	"background" : {
		"scripts" : [
            "background.js"
        ],
		"persistent" : true
	}
}
